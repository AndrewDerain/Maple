#-----------------------------------------------------------------------------+
# CMakeList.txt: 顶层 CMake 项目文件，在此处执行全局配置
#------------------------------------------------------------------------------


#-----------------------------------------------------------------------------+
#     Config CMake Minimum Version
#------------------------------------------------------------------------------
cmake_minimum_required (VERSION 3.20)


#-----------------------------------------------------------------------------+
#    Config project name.
#------------------------------------------------------------------------------
project (
    @(project.name)
    VERSION @(project.version)
    DESCRIPTION "Modern C++ Console Application")


#-----------------------------------------------------------------------------+
#    Config c++ standard
#------------------------------------------------------------------------------
enable_language(CXX)

set(CMAKE_CXX_STANDARD 20)
set(CMAKE_CXX_STANDARD_REQUIRED True)


#-----------------------------------------------------------------------------+
#    Config global config
#------------------------------------------------------------------------------
set(@(project.name)_runtime_out_dir     "${CMAKE_SOURCE_DIR}/bin")
set(@(project.name)_library_out_dir     "${CMAKE_SOURCE_DIR}/lib")
set(@(project.name)_archive_out_dir     "${CMAKE_SOURCE_DIR}/lib")


#-----------------------------------------------------------------------------+
#    Config subprojects
#------------------------------------------------------------------------------
add_subdirectory("src")
