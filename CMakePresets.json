{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20
    },
    "configurePresets": [
        {
            "name": "Base",
            "description": "全平台通用的配置",
            "hidden": true,
            "binaryDir": "${sourceDir}/BuildCache/${presetName}",
            "installDir": "${sourceDir}/Install/${presetName}"
        },


        {
            "name": "Unix.Base",
            "hidden": true,
            "inherits":["Base"],
            "generator": "Unix Makefiles"
        },
        {
            "name": "Unix.Debug",
            "hidden": false,
            "description": "",
            "inherits":["Unix.Base"],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },


        {
            "name": "Ninja.Base",
            "hidden": true,
            "inherits": ["Base"],
            "generator": "Ninja"
        },
        {
            "name": "Ninja.Debug",
            "displayName": "Ninja.Debug",
            "description": "使用 Ninja 编译 Debug 版本的程序",
            "inherits": ["Ninja.Base"],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Ninja.Release",
            "displayName": "Ninja.Release",
            "description": "使用 Ninja 编译 Release 版本的程序",
            "inherits": ["Ninja.Base"],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },


        {
            "name": "Mac.Xcode.Base",
            "hidden": true,
            "inherits": ["Base"],
            "generator": "Xcode"
        },
        {
            "name": "Mac.Xcode.Debug",
            "displayName": "Mac.Xcode.Debug",
            "description": "使用 Xcode 工具链编译 Debug 版本的程序（Apple）",
            "inherits": ["Mac.Xcode.Base"],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}
